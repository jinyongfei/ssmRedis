	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 配置session存在时间 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

	<!-- 默认起始页面 -->
	<welcome-file-list>
		<welcome-file>hello.jsp</welcome-file>
